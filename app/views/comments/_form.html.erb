<h4>Dodaj komentarz</h4>
<%= form_for([@post, @post.comments.build]) do |f| %>
<p>
	<%= f.label :username %><br>
	<%= f.text_field(:username, {:class=> 'form-control'})%>
</p>
<p>
	<%= f.label :body%><br>
	<%= f.text_field(:body, {:class=> 'form-control'})%>
</p>

<p>
	<%= f.submit({:class=> 'btn btn-secondary'})%>
</p>
<% end %>